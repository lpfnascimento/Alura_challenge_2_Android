<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.FormProductActivity">

        <EditText
            android:id="@+id/name_form"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name:"
            android:inputType="text"
            android:hint="Nome:"
            />

        <EditText
            android:id="@+id/description_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/name_form"
            app:layout_constraintEnd_toEndOf="@id/name_form"
            app:layout_constraintTop_toBottomOf="@id/name_form"
            tools:text="Description:"
            android:hint="Description:"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/price_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/description_form"
            app:layout_constraintEnd_toEndOf="@id/description_form"
            app:layout_constraintTop_toBottomOf="@id/description_form"
            tools:text="Price:"
            android:hint="Price:"
            android:inputType="numberDecimal"
            />

        <Button
            android:id="@+id/button_form"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_form"
            android:text="Save"
            android:textSize="24sp"
            app:layout_constraintVertical_bias="0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
